<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <TextView
        android:id="@+id/action_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/condividi"
        android:gravity="start|center_vertical"
        android:drawablePadding="16dp"
        android:textSize="18sp"
        android:drawableStart="@drawable/baseline_share_black_36"
        android:drawableLeft="@drawable/baseline_share_black_36"/>

    <TextView
        android:id="@+id/action_add_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/aggiungi_al_calendario"
        android:gravity="start|center_vertical"
        android:layout_marginTop="20dp"
        android:drawablePadding="16dp"
        android:textSize="18sp"
        android:drawableStart="@drawable/baseline_calendar_today_black_36"
        android:drawableLeft="@drawable/baseline_calendar_today_black_36"/>
</LinearLayout>